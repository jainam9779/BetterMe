<!-- fragment_daily_checklist.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DailyChecklistFragment">

    <TextView
        android:id="@+id/checklistTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today's Tasks"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <ListView
        android:id="@+id/checklistListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/checklistTitle"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="72dp" />

    <Button
        android:id="@+id/addChecklistItemButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:backgroundTint="@color/purple_500"
        android:text="+"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:background="@drawable/square_button" />
</RelativeLayout>
